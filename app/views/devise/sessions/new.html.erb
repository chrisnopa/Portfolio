<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-control">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group" %>
        </div>
        <div class="form-control">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-group" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="form-control">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
