<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <meta name="keywords" content= "<%=@seo_keywords%>">
    <%= favicon_link_tag 'favicons/favicon2.ico' %>
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <%= render 'shared/blog_nav' %>
      <%= render 'shared/blog_header' %>
    <div class="container blog-main-body">
      <div class="row">
        <%= yield %>
        <%=render 'shared/blog_sidebar'  %>
      </div>
    </div>
      <%= render 'shared/blog_footer' %>
      <%= alerts %>
      <%= source_helper("blog") %>
  </body>
</html>
